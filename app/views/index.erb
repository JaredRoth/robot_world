
<table class="table table-striped table-bordered table-hover col-md-12">
  <tr>
    <th class="text-center">Avatar</th>
    <th class="text-center">Name</th>
    <th class="text-center">City</th>
    <th class="text-center">State</th>
    <th class="text-center">Birthdate</th>
    <th class="text-center">Date Hired</th>
    <th class="text-center">Department</th>
  </tr>
  <% @robots.each do |robot| %>
    <tr class="text-center">
      <td class="col-md-1"><a href="/robots/<%=robot.name%>"><img src="<%= robot.avatar %>" alt="<%= robot.name %>" height="50" width="50" class="img-responsive center-block" alt="Responsive image"/></a></td>
      <td><a href="/robots/<%=robot.name%>"><%= robot.name %></a></td>
      <td><%= robot.city %></td>
      <td><%= robot.state %></td>
      <td><%= robot.birthdate %></td>
      <td><%= robot.date_hired %></td>
      <td><%= robot.department %></td>
    </tr>
  <% end %>
</table>
